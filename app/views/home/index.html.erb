<section class="content home-get_involved">
  <div class="row">
    <div class="content-title">
      <h2><%= t(".programs.get_involved.title") %></h2>
    </div>
  </div>

  <div class="row">
    <div class="home-get_involved-ways">
      <img src="http://lorempixel.com/300/100/">
      <h4><%= t(".programs.get_involved.sponsor.title") %></h3>
      <p><%= t(".programs.get_involved.sponsor.content") %></p>
    </div>

    <div class="home-get_involved-ways">
      <img src="http://lorempixel.com/300/100/">
      <h4><%= t(".programs.get_involved.mentor.title") %></h3>
      <p><%= t(".programs.get_involved.mentor.content") %></p>
    </div>

    <div class="home-get_involved-ways panel">
      <h4><%= t(".programs.get_involved.join_us.title") %></h4>
      <%= form_for @waiting_list_application do |f| %>
        <%= f.text_field :name, placeholder: t(".programs.get_involved.join_us.your_name") %>
        <%= f.text_field :email, placeholder: t(".programs.get_involved.join_us.your_email") %>
        <%= f.submit t(".programs.get_involved.join_us.button"), class: "call_to_action" %>
      <% end %>
    </div>
  </div>
</section>

